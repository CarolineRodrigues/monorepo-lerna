{
  "compilerOptions": {
    "outDir": "lib",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "target": "esnext",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./packages/*"]
    }
  },
  "exclude": [
    ".storybook/**/*",
    ".vscode/**/*",
    "artifacts/**/*",
    "infrastructure/**/*",
    "node_modules/**/*",
    "static/**/*",
    "src/test/**/*",
    "src/**/*/tests/*"
  ]
}
